            .slider-portfolio__item.js-slide
              img(src='img/media/portfolio/slide-06.jpg', alt='')
            .slider-portfolio__item.js-slide
              img(src='img/media/portfolio/slide-07.jpg', alt='')
            .slider-portfolio__item.js-slide
              img(src='img/media/portfolio/slide-08.jpg', alt='')
            .slider-portfolio__item.js-slide
              img(src='img/media/portfolio/slide-09.jpg', alt='')
            .slider-portfolio__item.js-slide.prev
