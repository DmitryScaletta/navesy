          .slider-portfolio__controls
            .slider-portfolio__thumb.js-dot.active
              img(src='img/media/portfolio/slide-01-thumb.jpg', alt='')
            .slider-portfolio__thumb.js-dot
              img(src='img/media/portfolio/slide-02-thumb.jpg', alt='')
            .slider-portfolio__thumb.js-dot
              img(src='img/media/portfolio/slide-03-thumb.jpg', alt='')
            .slider-portfolio__thumb.js-dot
              img(src='img/media/portfolio/slide-04-thumb.jpg', alt='')
            .slider-portfolio__thumb.js-dot
              img(src='img/media/portfolio/slide-05-thumb.jpg', alt='')
            .slider-portfolio__thumb.js-dot
              img(src='img/media/portfolio/slide-06-thumb.jpg', alt='')
