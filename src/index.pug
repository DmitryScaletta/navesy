            .slider-portfolio__thumb.js-dot
              img(src='img/media/portfolio/slide-09-thumb.jpg', alt='')
            .slider-portfolio__thumb.js-dot
              img(src='img/media/portfolio/slide-10-thumb.jpg', alt='')

    section.section.section-building
      .section__inner
        h2.section__title Этапы строительства навеса
        .section-building__content
          .building-step
            .building-step__header
              .building-step__circle
                img.building-step__image(src='img/media/building-step-1.jpg', alt='')
              .building-step__title Подготовительный
            .building-step__content
              ul
                li Обследование объекта
                li Разработка и согласование эскиза
                li Заключение договора и предоплата
          .building-step
            .building-step__header
              .building-step__circle
                img.building-step__image(src='img/media/building-step-2.jpg', alt='')
              .building-step__title Основной
            .building-step__content
              ul
                li Закупка необходимого материала
                li Сборка ферм и других заготовок
                li Зачистка швов
                li Покраска и монтаж металлоконструкции, водосточной системы
                li Монтаж профнастила или поликарбоната
          .building-step
            .building-step__header
              .building-step__circle
                img.building-step__image(src='img/media/building-step-3.jpg', alt='')
              .building-step__title Завершающий
            .building-step__content
              ul
                li Уборка на объекте
                li Расчет за работу

    section.section-promo.section-promo--promo-2
      .section-promo__inner
        .section-promo__content
          .section-promo__box
            .caption
              | Пенсионерам и ветеранам
              span.caption__text-big скидка
              span.caption__text-bigger 15%
            .section-promo__button-wrapper
              a.button.button--primary.button--icon-warning.js-popup-toggle(href='#') Хочу скидку

    section.section.section-reviews
      .section-reviews__inner
        h2.section__title.section__title--light Отзывы
        .slider-reviews
          .slider-reviews__slides
            -
              var reviews = [
                {
                  name: 'Ангелина',
                  city: 'г.Краснодар',
                  avatar: 'avatar-1.jpg',
                  text: 'Предложили отличный вариант по приемлемой цене. Грамотный проект предоставили, в срок установили навес! Качество отличное, еще и водостоки в подарок сделали!',
                },
                {
                  name: 'Поликарп',
                  city: 'г.Абинск',
                  avatar: 'avatar-2.jpg',
                  text: 'Предложили отличный вариант по приемлемой цене. Грамотный проект предоставили, в срок установили навес! Качество отличное, еще в водостоки в подарок сделали!Фирмой остались довольны на все 100! Бюджет у нас был немного ограничен, подумали-"повертели" и уместились в ту сумму, которой мы располагали.',
                },
              ];
            each slide, index in [...Array(3)]
              .slider-reviews__slide
                -
                  var items = (index % 2 === 0)
                    ? [reviews[0], reviews[1], reviews[0]]
                    : [reviews[1], reviews[0], reviews[1]];
                each review in items
                  .slider-reviews__item
                    .review-item
                      .review-item__circle
                        img.review-item__image(src='img/media/' + review.avatar, alt='')
                      .review-item__desc
                        .review-item__user
                          span.review-item__name #{review.name},
                          span.review-item__city= review.city
                        .review-item__text= review.text

          .slider-reviews__controls.js-slider-dots
            span.slider-reviews__dot.active
            span.slider-reviews__dot
            span.slider-reviews__dot

    section.section.section-features
      .section__inner
        h2.section__title.section__title--light Мы несём ответственность и даём гарантии
        .section-features__content
          -
            var features = [
              {
                name: 'На конструкцию',
                duration: 'до 7 лет',
                image: 'feature-1.svg',
              },
              {
                name: 'На покрытие',
                duration: 'до 3 лет',
                image: 'feature-2.svg',
              },
              {
                name: 'На поликарбонат',
                duration: 'до 15 лет',
                image: 'feature-3.svg',
              },
              {
                name: 'На профнастил',
                duration: 'до 50 лет',
                image: 'feature-4.svg',
              },
            ];
          each feature in features
            figure.card-feature
              .card-feature__circle
                img.card-feature__image(src='img/' + feature.image, alt='')
              figcaption.card-feature__text
                | #{feature.name}
                span.card-feature__text-big= feature.duration

    section.section.section-clients
      .section__inner
        h2.section__title Наши крупные клиенты
        .section-clients__content
          .section-clients__list
            img.section-clients__image(src='img/client-gazprom.png', alt='')
            img.section-clients__image(src='img/client-msk.png', alt='')
            img.section-clients__image(src='img/client-ask.png', alt='')

    section.section-promo.section-promo--promo-3
      .section-promo__inner
        .section-promo__content
          .section-promo__box
            .caption
              span.caption__text-big А ты хочешь стать нашим клиентом?
            .section-promo__button-wrapper
              a.button.button--primary.button--icon-warning.js-popup-toggle(href='#') Хочу конечно!

    footer.section-footer
      a.section-footer__top-link.js-move-to(href='#header')
      .section-footer__inner
        .section-footer__content
          .section-footer__text
            | Более 
            span.section-footer__text-highlighted 500
            |  навесов за 
            span.section-footer__text-highlighted 15
            |  лет!
          .section-footer__info
            .section-footer__contacts
              a.section-footer__phone(href='tel:+79895698534') + 7 (989) 569-85-34
              br
              a.section-footer__link(href='mailto:info@navesykrd.ru') info@navesykrd.ru
            .section-footer__copyright
              .section-footer__copyright-text Copyright © «Навесы Крд», 2017. Все права защищены
              a.section-footer__copyright-logo(href='//art6.ru')

    .popup.js-popup
      .popup__form.order-form.order-form--keyboard
        .popup__close.js-popup-toggle
        form.js-order-form(action='#')
          .order-form__text
            span.order-form__highlighted-text заполните заявку
            |           и мы свяжемся с вами
          .order-form__input-group.order-form__input-group--user
            input.order-form__input(type='text', name='name', placeholder='Введите ваше имя')
          .order-form__input-group.order-form__input-group--phone
            input.order-form__input(type='text', name='phone', placeholder='Введите ваш телефон')
          button.order-form__button.button.button--primary.button--no-shadow.button--icon-paper Отправить заявку

    a.floating-button.js-floating-button.js-popup-toggle

    script(src='js/app.js')
